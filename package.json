{
  "name": "vue-3-doodle",
  "version": "0.1.0",
  "description": "Vue 3 doodle",
  "private": true,
  "scripts": {
    "vite:dev": "vite --host --config vite.config/index.ts",
    "vite:build": "vite build --config vite.config/index.ts",
    "vite:preview": "vite preview --host --config vite.config/index.ts --port 4210",
    "qa:lint:code": "eslint src --resolve-plugins-relative-to \"./src/**/*.{ts,vue}\"",
    "qa:typecheck": "vue-tsc --noEmit",
    "qa:test:code": "vitest --config vite.config/index.ts --dom",
    "qa:test:code:preview": "vite preview --config vite.config/index.ts --base __vitest__ --outDir ./html",
    "qa": "run-s -sn qa:typecheck qa:test:code qa:lint:code",
    "commit": "cz",
    "commit:retry": "yarn commit -- --retry"
  },
  "author": {
    "email": "furrya.black@gmail.com",
    "name": "Furrya Black"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.14.2",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/ui": "^0.29.2",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.3.0",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.35.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-vue": "^9.9.0",
    "happy-dom": "^8.9.0",
    "less": "^4.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "vite": "^4.1.5",
    "vite-plugin-checker": "^0.5.6",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.0",
    "vitest": "^0.29.2",
    "vue-tsc": "^1.2.0",
    "yarn-upgrade-all": "^0.7.2"
  },
  "dependencies": {
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "peerDependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
